abbr 'p'='pacman'

abbr 'pu'='sudo pacman -Syu%'
abbr 'pacman up'='sudo pacman -Syu%'
abbr 'sudo pacman up'='sudo pacman -Syu%'

abbr 'pacman in'='sudo pacman -S'
abbr 'sudo pacman in'='sudo pacman -S'

abbr 'pacman rm'='sudo pacman -Rns'
abbr 'sudo pacman rm'='sudo pacman -Rns'

abbr 'pacman cl'='sudo pacman -Scc%'
abbr 'sudo pacman cl'='sudo pacman -Scc%'

abbr 'pacman ls'='pacman -Qe%'
abbr 'pacman lf'='pacman -Qf'

abbr 'pacman fd'='pacman -Ss'

abbr 'pacman si'='pacman -Si'

# list orphans
abbr 'pacman lo'='pacman -Qdt'
# remove orphans
abbr 'pacman ro'='sudo pacman -Rns $(pacman -Qtdq)'
abbr 'sudo pacman ro'='sudo pacman -Rns $(pacman -Qtdq)'
